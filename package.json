{
	"name": "jaysinghdev",
	"version": "1.0.0",
	"description": "Jay Singh's portfolio site built with Eleventy and Tailwind CSS",
	"type": "module",
	"scripts": {
		"css:build": "tailwindcss -i ./css/main.css -o ./_site/css/main.css --minify",
		"css:watch": "tailwindcss -i ./css/main.css -o ./_site/css/main.css --watch",
		"11ty:build": "eleventy",
		"11ty:serve": "eleventy --serve",
		"dev": "npm-run-all --parallel css:watch 11ty:serve",
		"build": "npm-run-all css:build 11ty:build",
		"preview": "eleventy --serve --port=8080",
		"release": "semantic-release"
	},
	"engines": {
		"node": ">=18"
	},
	"devDependencies": {
		"@11ty/eleventy": "^3.1.2",
		"@11ty/eleventy-img": "^6.0.4",
		"@11ty/eleventy-navigation": "^1.0.4",
		"@11ty/eleventy-plugin-rss": "^2.0.4",
		"@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"autoprefixer": "^10.4.21",
		"cross-env": "^7.0.3",
		"luxon": "^3.6.1",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.5.3",
		"prismjs": "^1.30.0",
		"semantic-release": "^25.0.2",
		"tailwindcss": "^3.4.17",
		"zod": "^3.25.67",
		"zod-validation-error": "^3.5.2"
	},
	"dependencies": {
		"@zachleat/heading-anchors": "^1.0.5"
	}
}
